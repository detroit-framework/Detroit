<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    tools:context=".RawView">

    <TextView
        android:text="Event"
        android:textSize="20sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" android:id="@+id/textView5"
        android:gravity="center"/>

    <Chronometer
        android:id="@+id/chronometer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="30sp"/>

    <Button
        android:layout_width="148dp"
        android:layout_height="wrap_content"
        android:onClick="start"
        android:text="Start" />


    <Button
        android:id="@+id/button"
        android:layout_width="149dp"
        android:layout_height="wrap_content"
        android:onClick="next"
        android:text="Next Event" />

    <Button
        android:layout_width="148dp"
        android:layout_height="wrap_content"
        android:onClick="stop"
        android:text="Stop" />
    <TextView
        android:text="Progress"
        android:layout_width="match_parent"
        android:layout_height="95dp" android:id="@+id/textView6"
        android:gravity="center"
        android:textSize="25sp"/>

    <TextView
        android:id="@+id/textView2"
        android:layout_width="match_parent"
        android:layout_height="121dp"
        android:gravity="center"
        android:text="Please carry out the following actions while your car is parked. Click START and then circle through all 53 events by clicking NEXT. This will roughly take 10 minutes. Once there are no events left to be recorded, click STOP." />

    <ProgressBar
        android:id="@+id/progressBar"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:indeterminate="false"
        android:max="100"
        android:minWidth="200dp"
        android:minHeight="50dp"
        android:progress="1"
        android:visibility="invisible" />

    <TextView
        android:id="@+id/textView9"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:gravity="center"
        android:text="Progress Status"
        android:visibility="invisible" />

    <Button
        android:id="@+id/button_done"
        android:layout_width="148dp"
        android:layout_height="wrap_content"
        android:text="Done" />

</LinearLayout>